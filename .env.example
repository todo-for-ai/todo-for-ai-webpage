# Todo for AI 前端环境变量配置示例

# API 配置
VITE_API_BASE_URL=http://localhost:50110/todo-for-ai/api/v1
VITE_MCP_SERVER_URL=http://localhost:50110

# 应用配置
VITE_APP_TITLE="Todo for AI"
VITE_APP_VERSION="1.0.0"

# Google Analytics 配置
# 是否启用 Google Analytics (true/false)
VITE_GA_ENABLED=true
# Google Analytics 4 测量ID (格式: G-XXXXXXXXXX)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# 开发环境配置
# 开发模式下是否启用调试日志
VITE_DEBUG_MODE=true
# 是否启用性能监控
VITE_PERFORMANCE_MONITORING=false

# 功能开关
# 是否启用实验性功能
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
# 是否启用错误边界
VITE_ENABLE_ERROR_BOUNDARY=true

# 第三方服务配置
# Sentry DSN (错误监控)
VITE_SENTRY_DSN=
# 其他分析服务
VITE_HOTJAR_ID=
VITE_MIXPANEL_TOKEN=
